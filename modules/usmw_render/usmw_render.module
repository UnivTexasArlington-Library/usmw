function reformat_date($date_string)
{
    $d = explode('-', $date_string);
    
    if($d[1] == '00' && $d[2] == '00')
    {
        return $d[0];
    }
    /*
    else if($d[1] != '0' && $d[2] == '0')
    {
        return $d[0];
    }
    */
    
    return date('F j, Y', strtotime($date_string));
}

