function render_topic_intro($major_topic)
{
    $h = '';
    $h .= hide_default_breadcrumbs();
    
    drupal_set_title('');
    
    //breadcrumbs
    $h .= '<div class="breadcrumbs">';
    $h .=  '<a href="'.site_root().'/topic">Major Topics</a> &gt' . $major_topic->label . ': Introduction';
    $h .= '</div>';
    
    $h .= '<div>';
    
