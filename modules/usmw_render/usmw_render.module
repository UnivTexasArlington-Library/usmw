                $h .= ' <img class="pagination_d_icon" src="' . site_root() . '/themes/usmw/images/arrow.png">';
            }
            $h .= '<a href="'.$next_link.'">NEXT</a>';
        }
        
        
    }
    
    
    
    $h .='</p>';
    $h .= '</div>';
    
    return $h;
    
}







